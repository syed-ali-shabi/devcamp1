<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= @page_title%></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- Start of nav -->
      <%= render "shared/blog_nav"%>
     <!-- End of nav -->

     <!-- Start of Header -->
     <%= render "shared/blog_masthead"%>
     <!-- End of Header -->

     <!-- Start of container & row  elements-->
     <div class="container">
        <div class="row">
          <!-- End of container & row elements -->

            <%#= login_helper%>
            <%= yield %>

            <!-- Start of side bar -->
            <!-- /.blog-sidebar -->
            <%= render "shared/blog_sidebar" %>
            <!--  End of side bar -->
            <!-- Start of Footer -->
            <%= render "shared/blog_footer" %>
            <!-- End of Footer -->

            <%#= render "shared/nav", location: 'bottom' %>
            <%= source_helper("blog")%>
        </div>
      </div>  
  </body>
</html>
